            <div class="tab tab-2">
            </div>
            <div class="tab experience">
                <span>心得</span><span>2022/10/07</span>
                <h4>養狗的第一百天</h4>
                <p>從年底跟我家小笨狗遇見，到現在剛好滿一百天</p>
            </div>
        </div>
    </div>

    <!-- 套用資料 -->
    <script>
        $(function () {
            // 文章陣列
            var articleList = [
                {
                    "title": "養狗的第一百天",
                    "tab": "experience",
                    "tag": "心得",
                    "text": "從年底跟我家小笨狗遇見，到現在剛好滿一百天",
                    "data": "2022/10/07"
                },
                {
                    "title": "可愛傻笑",
                    "tab": "video",
                    "tag": "影片",
                    "text": "怎麼這麼可愛",
                    "data": "2022/10/07"
                }
            ]

            var arttab = "tab";

            // 循環並取出陣列內容至螢幕
            $.each(articleList, function (index, obj) {
                var title = obj.title;
                var arttab = obj.tab;
                var tag = obj.tag;
                var text = obj.text;
                var data = obj.data;

                var List = 
                `<a asp-area="" asp-controller="" asp-action="">
                <div class="${arttab} ${arttab}">
                <span>${tag}</span><span>${data}</span>
                <h4>${title}</h4>
                <p>${text}</p>
                </div>
                </a>`;

                $(".tabs").append(List);
            })
        })

    </script>
